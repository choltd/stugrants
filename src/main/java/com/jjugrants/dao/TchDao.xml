<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jjugrants.dao.TchDao">
    <select id="query" resultType="teacher">
        select * from teacher
        <where>
            <if test="workId != null and workId != ''">
                and workId like '%' #{workId} '%'
            </if>
            <if test="password != null and password != ''">
                and password = #{password}
            </if>
            <if test="name != null and name != ''">
                and name like '%' #{name} '%'
            </if>
            <if test="faculty != null and faculty != ''">
                and faculty = #{faculty}
            </if>
        </where>
    </select>
    <select id="count" resultType="map">
        select count(*) as value
        from teacher
    </select>
    <select id="countReview" resultType="map">
        select count(*) as value
        from review
    </select>
    <select id="pageCount" resultType="teacher">
        select *
        from teacher
        order by id limit #{startIndex}, #{pageSize}
    </select>
</mapper>





